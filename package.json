{
  "name": "@idealworld/formula-editor",
  "version": "0.5.11",
  "description": "A relatively complete formula editor",
  "scripts": {
    "build": "rimraf dist && vue-tsc && vite build",
    "docs:dev": "npm run publish-typedoc && vitepress dev docs --host 0.0.0.0",
    "docs:build": "npm run publish-typedoc && vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "publish-typedoc": "typedoc --options typedoc.json"
  },
  "keywords": [
    "formula",
    "editor",
    "code"
  ],
  "license": "MIT",
  "author": {
    "name": "gudaoxuri",
    "email": "i@sunisle.org",
    "url": "https://idealworld.group/"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/formula-editor.es.js",
      "require": "./dist/formula-editor.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "type": "module",
  "module": "./dist/formula-editor.es.js",
  "types": "./dist/types/index.d.ts",
  "dependencies": {
    "@codemirror/autocomplete": "^6.9.1",
    "@codemirror/commands": "^6.2.5",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lint": "^6.4.2",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.19.0",
    "@lezer/common": "^1.1.0",
    "codemirror": "^6.0.1",
    "eslint-linter-browserify": "^8.49.0",
    "vue-codemirror6": "^1.1.27",
    "vue-i18n": "^9.5.0"
  },
  "peerDependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "element-plus": "^2.3.12",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/ui": "^0.34.5",
    "happy-dom": "^12.2.0",
    "rimraf": "^5.0.1",
    "sass": "^1.63.6",
    "scss": "^0.2.4",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^4.0.0-next.22",
    "typedoc-vitepress-theme": "^1.0.0-next.3",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.17.0",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.9",
    "vitepress": "1.0.0-rc.20",
    "vitest": "^0.34.5",
    "vue-tsc": "^1.8.13"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideal-world/formula-editor.git"
  }
}
